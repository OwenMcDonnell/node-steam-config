    "fs-extra": "^5.0.0",
    "node-fetch": "^2.0.0",
    "rage-edit": "^1.0.2",
    "simple-vdf2": "^1.1.1"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
